<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">

      <div class="sign-up-header d-flex justify-content-center">
        <h1>Sign up for your hat talk!</h1>
      </div>

      <div class="hattalk-form">
        <%= render 'form', talk: @talk %>
      </div>

      <div class="upcoming-talks mt-3">

        <div>
          <h1>Upcoming talks:</h1>
        </div>

        <div class="upcoming-talks-list">
          <h1><% @talks.each do |talk| %></h1>
            <% unless talk.date.past? %>
              <div class="d-flex">
                <li class="mb-2">👨‍🌾   <%= talk.date %>:  "<%= talk.topic %>"(<%= talk.name%>)</li>
                  <%= link_to edit_talk_url(talk) do %>
                    <i class="fas fa-pencil-alt"></i>
                  <% end %>
                  <%= link_to talk_path(talk), method: :delete, data: { confirm: "Are you sure you want to delete '#{talk.topic}'?" } do %>
                    <i class="fas fa-trash"></i>
                    <% end %>
              </div>
              <% end %>
          <% end %>
        </div>
      </div>

      <div class="past-talks mt-5">
        <div>
          <h1>Past talks:</h1>
        </div>

        <div class="past-talks-list">
          <h1><% @talks.each do |talk| %></h1>
            <% if talk.date.past? %>
              <li class="mb-2">👒<%= talk.date %>:  "<%= talk.topic %>"(<%= talk.name%>)</li>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
